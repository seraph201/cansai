/* pages/productdetails/productdetails.wxss */
page {background-color: rgba(237, 241, 243, 0.445);} 
/* 产品图片滑动组件*/
.product-slide{position:relative;}
.slide-wrap{width:100%;height:15rem;border:0;margin:0.5rem auto;}
.slide-wrap-image{height:15rem;width:100%;}
.counter{position: absolute;bottom: 1rem;right:2rpx;width:3rem;height:0.5rem;}

/* 产品详情*/
.term-list{margin-top:0.5rem;margin-bottom:3rem;}
.term{display: flex;flex-flow: row nowrap;justify-content: space-between;align-items: center; background-color: #fff;height:70rpx;padding:0.5rem 1rem;font-size:9pt;color:#777575;}
.term-item{border-top:1px solid #e7e6e6;}
.mark{width:30rpx;height:30rpx;vertical-align: sub;margin-right:0.5rem;}
.product-attention{background-color: #FFF;text-align: center;padding-top:1rem;margin-bottom: 8rem;}
.product-attention-replace{padding-top:3rem;padding-bottom: 3rem;}



/* 底部导航*/
.balance-wrap{display: flex;flex-flow:row nowrap;justify-content: space-between;align-items: center;border-top:1px solid rgb(235, 233, 233);background-color: #fff;}
.menuitem{display: flex;flex-flow:row nowrap;justify-content: space-between;align-items: center;font-size:7pt;}
.sign{margin-left:1rem; display:flex;flex-direction: column;align-items: center;}
.sign  image{width:60rpx;height:60rpx;margin: 2rpx;}
.balance-common{display:inline-block;width:180rpx;height:110rpx;color:#fff;text-align:center;line-height: 110rpx;font-size: 10pt;}
.balance-collect{background-color: rgb(245, 111, 111);}
.balance-btn{background-color:red}
.onbadge{display:none;}
/*隐藏选择组件*/
.shopping-wrap{position:fixed;bottom:0;width:100%;left:0;right:0;z-index: 100;}
.shopping{border-top:1px solid rgb(243, 238, 238);margin-top:1rem;background-color: #fff;}
.cancel{color:#ccc;font-size:9pt;}
.goods{display:flex;flex-flow:row norap;justify-content: space-between;height:5rem;padding:0.5rem;}
.commodity-image image{width:150rpx;height:200rpx;}
.commodity{display:flex;flex-flow:row norap;position: relative;}
.commodity-image{position: absolute;top:-50rpx;left:0.5rem;border:1px solid rgb(243, 238, 238);border-radius: 5%;}
.commodity-detill{position: relative;left:5rem;}
.amount{display:flex;flex-flow:row norap;justify-content: space-between;padding:0.5rem;align-items: center;border-top: 1px solid #ccc;}
.amount-label{vertical-align: middle;}
.amount-control{width:35%;border-radius: 3px; }
/*加号和减号*/
.stepper text {border: 1px solid #ccc; width: 20px;line-height: 26px;text-align: center;float: left;}   
/*数值*/
.stepper input {width: 20px;height: 26px;float: left;margin: 0 auto;text-align: center;font-size: 12px;border: 1px solid #ccc; }  
/*给中间的input设置左右边框即可*/
  
/*普通样式*/
.stepper .normal{color: black;} 
/*禁用样式*/
.stepper .disabled{color: #ccc;} 
.btn{height:140rpx;line-height: 140rpx;text-align: center;background-color: red;color:#fff;letter-spacing: 60rpx;font-weight: bolder;}

/* 弹出效果 */
.false{transform:translateY(100%);-webkit-transform:translateY(100%);transition: all .5s cubic-bezier(0,.54,.51,.99);-webikit-transition: all .3s cubic-bezier(0,.54,.51,.99);opacity: 1;}
.true{transform:translateY(0%);-webkit-transform:translateY(0%);transition: all .5s cubic-bezier(0,.54,.51,.99);-webikit-transition: all .3s cubic-bezier(0,.54,.51,.99);opacity: 1;}

/* 遮罩 */
.shade{width: 100%;height: 100%;position: fixed;top: 0;left: 0; background-color:rgba(0,0,0,0.3);z-index: 2;}
.shade  .true{ -webkit-transition: opacity 0.35s, visibility 0.35s;transition: opacity 0.35s, visibility 0.35s;visibility: visible;opacity: 1;}
.shade .false{visibility: hidden;opacity: 0;  -webkit-transition: opacity 0.35s, visibility 0.35s;transition: opacity 0.35s, visibility 0.35s;}