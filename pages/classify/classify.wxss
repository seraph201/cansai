/* pages/classify/classify.wxss */
page{background: #f5f5f5;border-top: 1px solid #f5f5f5;}  
/*总体主盒子*/
.classifywrap {background-color: #fff;color: #939393;display: grid;grid-template-columns: 1fr 4fr;}
 /*左侧栏主盒子 */
.nav_left_wrap{background: #f5f5f5;}  
/*左侧栏list的item*/
.nav_left_items{height: 40px;line-height: 40px;border-bottom: 1px solid #dedede;font-size: 14px;text-align: center;}  
/*左侧栏list的item被选中时*/
.nav_left_items.active{background: #fff;color: #f0145a; }  

/*右侧栏主盒子*/
.nav_right_wrap{height:60rem;}
.nav_right{box-sizing: border-box;background: #fff;display: grid;grid-template-columns: 1fr 1fr;grid-gap: 10px;padding: 20rpx;}  
/*右侧栏list的item*/
.nav_right_items{box-sizing: border-box;border-radius: 15rpx;overflow: hidden;}  
.nav_right_items image{ width:100%;height:300rpx;}  
.detill{background-color:#fff;}
.detill-title{margin-top:0.2rem;margin-left:0.2rem;font-size: 9pt;padding:2px;font-weight:bold;}
.detill-quote{display: flex;flex-flow: row nowrap;align-items: center;padding:0 0.2rem;margin:0.5rem auto;font-size: 10pt;font-weight:bolder;}
.detill-quote-price{color:red;}
.detill-quote-unit{margin-left:0.2rem;}

.nodata_text{text-align: center;margin-top: 12rem;}
