/* pages/querycommunity/querycommunity.wxss */
page{border-top:1px solid rgb(221, 218, 218);background:rgb(252, 250, 250);}
.queryform{padding:1rem;}
.queryinput{border:1px solid rgb(221, 218, 218); text-align: center;height:2.5rem;width:95%;margin:1rem auto;}
.btn{height:1.5rem !important;line-height:1.5rem !important;background-color: red !important;font-size: 8pt;letter-spacing: 0.5rem;padding-top: 0;}

.query-result{margin-top:1rem;margin-bottom:1rem;padding:1.5rem;background-color: #fff;font-size: 10pt;}
.query-info{display: flex;flex-flow:row nowrap;justify-content: space-between;margin-top: 0.8rem;width:80%;margin-left:auto;margin-right: auto;}


.near-community{width:100%;margin-top: 2rem;margin-left: auto;margin-right: auto;font-size: 10pt;background-color: #fff;min-height:25rem;padding-top: 1.5rem;}
.section{display: flex;flex-flow: row nowrap;width:80%;margin:0 auto;justify-content: flex-start;padding:1rem 0;border-top:1px solid rgb(221, 218, 218);border-bottom:1px solid rgb(221, 218, 218);}
.picker{width:25%;text-align: center;color:#929090;}

.nearcommunity-descripe{padding: 1rem;}
.nearcommunity-descripe-item{margin:0.5rem;margin-left: 2rem;}

.unitycp{position:fixed;bottom:1rem;width:100%;left:0;right:0;font-size:9pt;border:1px solid rgb(221, 218, 218);color:rgb(221, 218, 218);}