/* pages/personal/personal.wxss */
page {background-color: rgba(237, 241, 243, 0.445);} 
.page-body-info{width:100%;height:9rem;background-color: #9bf8d13d;border-radius: 0 0 50% 50% ;position: relative;}


.current-info{width:80%;height:10rem;position: absolute;background-color: white;border-radius: 5%;left: 0;top: 3rem;
            right: 0;margin-left: auto; margin-right: auto;vertical-align: center;display: flex;flex-direction: column;
  align-items: center; }
.userinfo-avatar{width: 128rpx;height: 128rpx;margin-top: 80rpx;border-radius: 50%;}
.userinfo-nickname{margin-top:20rpx; background-color: #fff;font-size:14px;}

.userinfo-nickname::after{ border: none;} 
.showbadge{display: none;position: absolute;top:-0.2rem;right:0.5rem;}
.show{display: block;}
.menu{background-color: #fff;margin-top: 5rem;padding:2rem;font-weight: 2rpx;color:#929090;}
.order{display: flex;flex-flow:row wrap;justify-content: space-between;align-items: center;}
.myorder{font-size:9pt;}
.showmyorder{font-size:6pt;}
.menu-opption{display:flex;align-items:center;justify-content: space-between;font-size:8pt;width:100%;margin:0.6rem auto;color:#929090;text-align: center;}
.menu-opption-wrap{ width:23%;position: relative;}
.menu-opption-src{display:inline-block;width:60rpx;height:60rpx;margin-bottom:10rpx;margin-left:auto;margin-right: auto;}



.term-list{margin-top:2rem;margin-bottom:3rem;}
.term{display: flex;flex-flow: row nowrap;justify-content: space-between;align-items: center; background-color: #fff;height:70rpx;padding:0.5rem;font-size:9pt;color:#777575;}
.reserve-time{display: flex;flex-flow: row nowrap;align-items: center; background-color: #fff;height:70rpx;padding:0.5rem;font-size:9pt;color:#777575;}
.mark{width:30rpx;height:30rpx;vertical-align: sub;margin-right:0.5rem;}
.sign{border-right:1px solid black;border-bottom: 1px solid black;width:20rpx;height:20rpx;transform:rotate(-45deg); }


.addr{border-top:1px solid #e7e6e6;}
.collect{margin-top:1rem;}
.footmark{border-top:1px solid #e7e6e6;}
.shoppingcart{margin-top:1rem;}